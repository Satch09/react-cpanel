{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [ "react" ],
    "rules": {
        "indent": [ "error", "tab" ],
        "quotes": [ "error", "single" ],
        "semi": [ "error", "always" ],
        "no-mixed-spaces-and-tabs": [ "off" ],
        "no-console": ["off"],
        "no-unused-vars": ["off"],
        "object-curly-spacing": ["error", "never", { "objectsInObjects": true }]

    }
}